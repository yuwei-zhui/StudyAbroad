<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDreamSchool"
    android:layout_width="200dp"
    android:layout_height="140dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/orange_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with university name and remove button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/textUniversityName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="University Name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <ImageView
                android:id="@+id/imageRemove"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:contentDescription="Remove from dream list"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Program name -->
        <TextView
            android:id="@+id/textProgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Program Name"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Location -->
        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Location"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            app:drawableTint="@color/white" />

        <!-- Ranking -->
        <TextView
            android:id="@+id/textRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="#13"
            android:textColor="@color/orange_primary"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/circle_white"
            android:gravity="center"
            android:minWidth="24dp"
            android:minHeight="24dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 