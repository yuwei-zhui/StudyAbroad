<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTimeline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- University Name -->
        <TextView
            android:id="@+id/tvUniversityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The University of Melbourne"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Program Name -->
        <TextView
            android:id="@+id/tvProgramName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="2025 Master Degree Application"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:alpha="0.9"
            android:fontFamily="sans-serif" />

        <!-- Status and Days Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <!-- Opens in days -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOpensInLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opens in"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/tvOpensInDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="61"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="days"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Closes in days -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvClosesInLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closes in"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/tvClosesInDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="105"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="days"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:alpha="0.8" />

            </LinearLayout>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_more_vert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 