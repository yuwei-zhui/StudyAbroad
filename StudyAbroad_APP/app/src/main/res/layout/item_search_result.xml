<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- University Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_school"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUniversityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The University of Melbourne"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Melbourne, Australia"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_purple"
                android:text="13"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:minWidth="32dp"
                android:minHeight="32dp"/>

        </LinearLayout>

        <!-- University Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Website -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="WEBSITE"
                    android:textColor="@color/purple_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewWebsite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="unimelb.edu.au"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- QS Ranking -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="QS RANKING"
                    android:textColor="@color/purple_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewQSRanking"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="13"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="LOCATION"
                    android:textColor="@color/purple_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewLocationDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Melbourne, Australia"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Course Recommendation Section -->
        <LinearLayout
            android:id="@+id/layoutCourseRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COURSE RECOMMENDATION"
                android:textColor="@color/purple_primary"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/light_purple">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_academic"
                            app:tint="@color/purple_primary"/>

                        <TextView
                            android:id="@+id/textViewCourseName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Master of Computer Science"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/imageViewHeart"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_heart_outline"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:contentDescription="Add to dream list"/>

                        <ImageView
                            android:id="@+id/imageViewChat"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chat"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="4dp"
                            android:contentDescription="Chat about this program"
                            app:tint="@color/purple_primary"/>

                    </LinearLayout>

                    <!-- Course Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <!-- Duration -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_time"
                                app:tint="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Duration"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewDuration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="2 years full time / 4 years part time"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <!-- Mode -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_location"
                                app:tint="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Mode (Location)"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewMode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="On campus (Parkville)"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <!-- Intake -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Intake"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewIntake"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Start year (February intake) application due"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <!-- Application Deadline -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"/>

                            <TextView
                                android:id="@+id/textViewDeadline"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="31 August 2025"
                                android:textColor="@color/orange_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <ImageView
                                android:id="@+id/imageViewAddToTimeline"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_add_circle"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:padding="4dp"
                                app:tint="@color/purple_primary"
                                android:contentDescription="Add to timeline"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_info"
                                app:tint="@color/orange_primary"/>

                        </LinearLayout>

                        <!-- Fees -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_money"
                                app:tint="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Fees"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewFees"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="AUD$90,250 (Indicative total course fee)"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <!-- Entry Requirements -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_requirements"
                                app:tint="@color/text_secondary"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Entry Requirements"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/textViewRequirements"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Admission criteria"
                                android:textColor="@color/text_primary"
                                android:textSize="12sp"/>

                        </LinearLayout>

                        <!-- View More Details -->
                        <TextView
                            android:id="@+id/textViewMoreDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="... VIEW MORE DETAILS"
                            android:textColor="@color/purple_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 